{% extends 'base.html.twig' %}



{% block body %}
<div class='container'>

<nav class="navbar navbar-expand-sm bg-success p-2 text-dark bg-opacity-10 navbar-dark sticky-top ml-20">
  <a class="navbar-brand" href="#">Logo</a>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="#">Category</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Events</a>
    </li>
     <li class="nav-item">
      <a class="nav-link float-right" href="#">Logout</a>
    </li>
  </ul>
</nav>

<h1 class="text-center">LIST OF APPLICANTS</h1>
 {% for message in app.flashes('notice') %}
       <div class="alert alert-success mt-4 mb-b">
       {{ message }}
       </div> 
    {% endfor %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">S/No</th>
      <th scope="col">Names</th>
      <th scope="col">Contact Number</th>
       <th scope="col">E-mail</th>
      <th scope="col">Nationality</th>
      <th scope="col">Destination</th>
      <th scope="col">Travel Day</th>
      <th scope="col">Total Days</th>
      <th scope="col">Remarks</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
  {% for data in list %}

  <tr>
      <th scope="row">{{ data.id }}</th>
      <td>{{ data.names }}</td>
      <td>{{ data.contactNumber }}</td>
      <td>{{ data.eMail }}</td>
      <td>{{ data.nationality }}</td>
      <td>{{ data.destination }}</td>
      <td>{{ data.travelDay }}</td>
      <td>{{ data.totalDays }}</td>
      <td>Most Welcome</td>
       

        <td>
        <a class= "btn btn-warning btn-sm float-right" href="{{ path('update', {'id':data.id}) }}">Update</a>
        <a class= "btn btn-danger btn-md float-right" href="{{ path('delete', {'id':data.id }) }}">Delete</a>  
</td>

    </tr>
     
  {% endfor %}
    
    
  </tbody>
</table>
</div>

{% endblock %}
